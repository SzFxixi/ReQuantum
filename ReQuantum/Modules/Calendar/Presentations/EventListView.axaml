<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:ReQuantum.ViewModels"
             xmlns:entities="clr-namespace:ReQuantum.Modules.Calendar.Entities"
             xmlns:presentations="clr-namespace:ReQuantum.Modules.Calendar.Presentations"
             xmlns:iconPacks="https://github.com/MahApps/IconPacks.Avalonia"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400"
             x:Class="ReQuantum.Views.EventListView"
             x:DataType="presentations:EventListViewModel">
  <Design.DataContext>
    <presentations:EventListViewModel />
  </Design.DataContext>

  <Grid>
    <!-- æ—¥ç¨‹åŒºåŸŸ -->
    <Border BorderThickness="1"
            BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
            CornerRadius="8"
            Padding="16">
      <StackPanel Spacing="12">



          <Grid ColumnDefinitions="*,Auto">
          <TextBlock Grid.Column="0"
                   Text="{Binding EventsTitle.Text}" 
                   FontSize="18" 
                   FontWeight="SemiBold"
                   VerticalAlignment="Center"/>

          <Button Grid.Column="1" 
                  Click="UnfoldList"
                  Background="White">
              <iconPacks:PackIconMaterial Kind="DotsVertical" />
              <Button.ContextMenu>
                  <ContextMenu>
                      <MenuItem Header="ðŸ“…{Binding Localizer[SyncCoursesTable]}"
                                Command="{Binding SyncZdbkScheduleCommand}"
                                IsVisible="{Binding ShowZdbkSyncButton}"></MenuItem>

                      <MenuItem Header="âž•{Binding Localizer[AddEvent]}"
                                Command="{Binding ShowAddDialogCommand}"></MenuItem>
                  </ContextMenu>
                  
              </Button.ContextMenu>
          </Button>

        </Grid>

        <!-- æ—¥ç¨‹åˆ—è¡¨ -->
        <ItemsControl ItemsSource="{Binding Events}">
          <ItemsControl.ItemTemplate>
            <DataTemplate DataType="entities:CalendarEvent">
              <Border BorderThickness="1"
                      BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                      CornerRadius="4"
                      Padding="12"
                      Margin="0,4">
                <Grid ColumnDefinitions="*,Auto">
                  <StackPanel Grid.Column="0" Spacing="4">
                    <TextBlock Text="{Binding Content}" 
                             FontSize="14"
                             TextWrapping="Wrap"
                             FontWeight="Medium"/>
                    <TextBlock FontSize="12" Opacity="0.7">
                      <Run Text="{Binding StartTime, StringFormat='yyyy-MM-dd HH:mm'}"/>
                      <Run Text=" - "/>
                      <Run Text="{Binding EndTime, StringFormat='yyyy-MM-dd HH:mm'}"/>
                    </TextBlock>
                  </StackPanel>
                  <Button Grid.Column="1" 
                        Command="{Binding ((presentations:EventListViewModel)DataContext).DeleteEventCommand,
                            RelativeSource={RelativeSource AncestorType=UserControl},
                            FallbackValue={x:Null}}"
                        CommandParameter="{Binding}"
                        Padding="8,4"
                        VerticalAlignment="Top">
                    <TextBlock Text="{Binding ((presentations:EventListViewModel)DataContext).Localizer[Delete],
                                        RelativeSource={RelativeSource AncestorType=UserControl}, 
                                        FallbackValue=Delete}" 
                               FontSize="12"/>
                  </Button>
                </Grid>
              </Border>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- ç©ºçŠ¶æ€æç¤º -->
        <TextBlock Text="{Binding Localizer[NoEvents]}"
                 Opacity="0.5"
                 HorizontalAlignment="Center"
                 Margin="0,16"
                 IsVisible="{Binding !Events.Count}"/>
      </StackPanel>
    </Border>
  </Grid>
</UserControl>
