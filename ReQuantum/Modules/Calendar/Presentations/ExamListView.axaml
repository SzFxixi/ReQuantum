<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:ReQuantum.ViewModels"
             xmlns:entities="clr-namespace:ReQuantum.Modules.Calendar.Entities"
             xmlns:presentations="clr-namespace:ReQuantum.Modules.Calendar.Presentations"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400"
             x:Class="ReQuantum.Views.ExamListView"
             x:DataType="presentations:ExamListViewModel">
  <Design.DataContext>
    <presentations:ExamListViewModel />
  </Design.DataContext>

  <Grid>
    <!-- è€ƒè¯•åŒºåŸŸ -->
    <Border BorderThickness="1"
            BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
            CornerRadius="8"
            Padding="16">
      <StackPanel Spacing="12">
        <Grid ColumnDefinitions="*,Auto">
          <TextBlock Grid.Column="0"
                   Text="{Binding ExamsTitle.Text}"
                   FontSize="18"
                   FontWeight="SemiBold"
                   VerticalAlignment="Center"/>

          <!-- æ•™åŠ¡ç½‘è€ƒè¯•ä¿¡æ¯åŒæ­¥æŒ‰é’® -->
          <Button Grid.Column="1"
                Command="{Binding SyncExamsCommand}"
                IsVisible="{Binding ShowExamSyncButton}"
                Padding="12,6">
            <StackPanel Orientation="Horizontal" Spacing="4">
              <TextBlock Text="ðŸ“" FontSize="14" IsVisible="{Binding !IsSyncingExams}"/>
              <TextBlock Text="â³" FontSize="14" IsVisible="{Binding IsSyncingExams}"/>
              <TextBlock Text="åŒæ­¥è€ƒè¯•" FontSize="14"/>
            </StackPanel>
          </Button>
        </Grid>

        <!-- è€ƒè¯•åˆ—è¡¨ -->
        <ItemsControl ItemsSource="{Binding Exams}">
          <ItemsControl.ItemTemplate>
            <DataTemplate DataType="entities:CalendarEvent">
              <Border BorderThickness="1"
                      BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                      CornerRadius="4"
                      Padding="12"
                      Margin="0,4">
                <Grid ColumnDefinitions="*,Auto">
                  <StackPanel Grid.Column="0" Spacing="4">
                    <TextBlock Text="{Binding Content}"
                             FontSize="14"
                             TextWrapping="Wrap"
                             FontWeight="Medium"/>
                    <TextBlock FontSize="12" Opacity="0.7">
                      <Run Text="{Binding StartTime, StringFormat='yyyy-MM-dd HH:mm'}"/>
                      <Run Text=" - "/>
                      <Run Text="{Binding EndTime, StringFormat='yyyy-MM-dd HH:mm'}"/>
                    </TextBlock>
                  </StackPanel>
                  <Button Grid.Column="1"
                        Command="{Binding ((presentations:ExamListViewModel)DataContext).DeleteExamCommand,
                            RelativeSource={RelativeSource AncestorType=UserControl},
                            FallbackValue={x:Null}}"
                        CommandParameter="{Binding}"
                        Padding="8,4"
                        VerticalAlignment="Top">
                    <TextBlock Text="{Binding ((presentations:ExamListViewModel)DataContext).Localizer[Delete],
                                        RelativeSource={RelativeSource AncestorType=UserControl},
                                        FallbackValue=Delete}"
                               FontSize="12"/>
                  </Button>
                </Grid>
              </Border>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- ç©ºçŠ¶æ€æç¤º -->
        <TextBlock Text="{Binding Localizer[NoExams]}"
                 Opacity="0.5"
                 HorizontalAlignment="Center"
                 Margin="0,16"
                 IsVisible="{Binding !Exams.Count}"/>

        <!-- è°ƒè¯•ä¿¡æ¯æ˜¾ç¤º -->
        <Border BorderThickness="1"
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                CornerRadius="4"
                Padding="12"
                Margin="0,8,0,0"
                IsVisible="{Binding ShowDebugInfo}">
          <StackPanel Spacing="8">
            <TextBlock Text="ðŸ” è°ƒè¯•ä¿¡æ¯"
                     FontSize="14"
                     FontWeight="SemiBold"/>
            <ScrollViewer MaxHeight="300"
                        VerticalScrollBarVisibility="Auto">
              <TextBlock Text="{Binding DebugInfo}"
                       FontSize="12"
                       FontFamily="Consolas,Courier New,monospace"
                       TextWrapping="Wrap"
                       Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                       Padding="8"/>
            </ScrollViewer>
          </StackPanel>
        </Border>
      </StackPanel>
    </Border>
  </Grid>
</UserControl>
